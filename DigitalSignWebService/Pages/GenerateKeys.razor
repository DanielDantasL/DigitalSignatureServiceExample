@page "/genKeys"
@using BlazorDownloadFile
@using DigitalSignWebService.Data

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Generate Keys</MudText>
    <MudGrid Class="my-2">
        <MudItem xs="6" sm="6" md="4">
            <MudSelect Label="Algorithm" @bind-Value="KeyGenAlgorithm" Strict="true" Variant="Variant.Outlined" Format="F2">
                @foreach (CryptoUtils.KeyGenAlgorithm item in Enum.GetValues(typeof(CryptoUtils.KeyGenAlgorithm))) {
                    <MudSelectItem Value="@item">@item</MudSelectItem>
                }
            </MudSelect>
        </MudItem>
        <MudItem xs="6" sm="6" md="4">
            <MudSelect Label="Key Size" @bind-Value="KeySize" Strict="true" Variant="Variant.Outlined" Format="F2" ToStringFunc="_keySizeToString">
                @foreach (CryptoUtils.KeySize item in Enum.GetValues(typeof(CryptoUtils.KeySize))) {
                    <MudSelectItem Value="@item"></MudSelectItem>
                }
            </MudSelect>
        </MudItem>
    </MudGrid>
    <MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="GenerateKeyPair" Class="my-2">Generate Key Pair</MudButton>
    <MudGrid Class="my-2">
        <MudItem xs="6" sm="6" md="4">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Public Key</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@PublicKey</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" Disabled="@string.IsNullOrEmpty(PublicKey)" @onclick="() => SaveTextInFile(PublicKey, PublicKeyFileName)">Save</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="6" sm="6" md="4">
                    <MudCard>
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h6">Private Key</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText>@PrivateKey</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Variant="Variant.Text" Color="Color.Primary" Disabled="@string.IsNullOrEmpty(PrivateKey)" @onclick="() => SaveTextInFile(PrivateKey, PrivateKeyFileName)">Save</MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
    </MudGrid>
</MudContainer>

@code {
        private const string KeygenFailedMessage = "Failed to generate Key!";
        private const string PublicKeyFileName = "public-key.txt";
        private const string PrivateKeyFileName = "private-key.txt";

    private CryptoUtils.KeySize KeySize { get; set; } = CryptoUtils.KeySize.Bits515;
    private CryptoUtils.KeyGenAlgorithm KeyGenAlgorithm { get; set; } = CryptoUtils.KeyGenAlgorithm.RSA;

    private string PublicKey { get; set; }
    private string PrivateKey { get; set; }
    [Inject] IBlazorDownloadFileService BlazorDownloadFileService { get; set; }

    private void GenerateKeyPair() {
        if (CryptoUtils.TryGenerateKeyPair(KeyGenAlgorithm, KeySize, out var publicKeyK, out var privateKey)) {
            PublicKey = publicKeyK;
            PrivateKey = privateKey;
        } else {
            PublicKey = publicKeyK;
            PrivateKey = privateKey;
        }
    }

    private void SaveTextInFile(string content, string fileName) {
        BlazorDownloadFileService.DownloadFileFromText(fileName, content, contentType: "text/plain", encoderShouldEmitUTF8Identifier: false);
    }

    private readonly Func<CryptoUtils.KeySize, string> _keySizeToString = ks => {
        return ks switch {
            CryptoUtils.KeySize.Bits515  => "515 Bits",
            CryptoUtils.KeySize.Bits1024 => "1024 Bits",
            _                            => nameof(ks)
            };
    };

}